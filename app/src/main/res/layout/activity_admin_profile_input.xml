<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F2F5"
    tools:context=".admin.AdminProfileInputActivity">

    <LinearLayout
        android:id="@+id/profileInputToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#007BFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/ivProfileInputBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back_white"
            android:contentDescription="Kembali"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tvToolbarTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:text="Input Profil Bapenda"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Visi Bapenda:"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etVisi"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="top"
                android:hint="Masukkan visi Bapenda"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Misi Bapenda:"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMisi"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="top"
                android:hint="Masukkan misi Bapenda (gunakan enter untuk poin-poin)"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Struktur Organisasi (Nama Drawable Gambar):"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etStrukturOrganisasi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center_vertical"
                android:hint="Contoh: verifikasi_data"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tujuan dan Fungsi Bapenda:"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTujuanDanFungsi"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="top"
                android:hint="Masukkan tujuan dan fungsi Bapenda"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Pimpinan Bapenda (Format: Nama | Jabatan | Nama_Drawable_Foto):"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPimpinanList"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="top"
                android:hint="Contoh:\nDr. H. M. Ridwan | Kepala Bapenda | placeholder_pimpinan_1\nAni S.Pd | Sekretaris | placeholder_pimpinan_2"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/rounded_button_primary"
                android:text="Simpan Profil Bapenda"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="4dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>