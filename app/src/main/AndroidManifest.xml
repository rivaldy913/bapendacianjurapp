<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BapendaCjrApp"> <!-- Pastikan nama tema sesuai dengan proyek Anda -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeActivity"
            android:exported="false">
            <!-- HomeActivity tidak diekspor karena hanya diakses dari dalam aplikasi -->
        </activity>

        <activity
            android:name=".main.DetailActivity"
            android:exported="false">
            <!-- DetailActivity juga tidak diekspor -->
        </activity>

        <activity
            android:name=".main.RegisterActivity"
            android:exported="false">
            <!-- RegisterActivity tidak diekspor karena hanya diakses dari dalam aplikasi -->
        </activity>

        <!-- Tambahkan Activity lain di sini jika Anda membuat Activity spesifik untuk setiap menu -->
        <!-- Contoh: -->
        <!-- <activity android:name=".ProfileBapendaActivity" android:exported="false" /> -->
        <!-- <activity android:name=".JenisPajakActivity" android:exported="false" /> -->
        <!-- <activity android:name=".ArtikelActivity" android:exported="false" /> -->
        <!-- <activity android:name=".EditProfileActivity" android:exported="false" /> -->

    </application>

</manifest>